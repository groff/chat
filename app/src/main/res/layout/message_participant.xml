<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/participantMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/speech_bubble_participant"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guidelineParticipant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Participant message will show here!" />

    <ImageView
        android:id="@+id/participantImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/speech_bubble_participant"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/guidelineParticipant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineParticipant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="288dp" />

</androidx.constraintlayout.widget.ConstraintLayout>